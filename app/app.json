{
  "expo": {
    "name": "CalAi - AI Nutrition Tracker",
    "slug": "calai-nutrition-tracker",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.calai.nutrition",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses camera to scan food and nutrition labels for better tracking",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to select food images",
        "NSMicrophoneUsageDescription": "This app may use microphone for voice notes about meals"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.calai.nutrition",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-camera",
      "expo-image-picker",
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow CalAi to access your photos to select food images for tracking",
          "cameraPermission": "Allow CalAi to use your camera to capture food photos for nutrition analysis"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
